{
  "name": "@chatbird/react-firebase-auth",
  "version": "0.0.2",
  "description": "",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rm -r ./lib/* && tsc",
    "watch": "tsc --watch --skipLibCheck",
    "recompile": "tsc",
    "prepublish": "npm run build",
    "test": "./node_modules/.bin/jest"
  },
  "author": "Gerald Urschitz",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/sinon": "^4.3.3",
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.4",
    "chai": "^4.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.4.3",
    "jsdom": "^11.10.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "regenerator-runtime": "^0.11.1",
    "sinon": "^5.0.7",
    "ts-jest": "^22.4.6",
    "typescript": "^2.8.3"
  },
  "files": [
    "lib",
    "LICENSE",
    "main.js"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!transpile-me|transpile-me-too).+(js|jsx)$"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|tsx|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gurschitz/react-firebase-auth.git"
  },
  "bugs": {
    "url": "https://github.com/gurschitz/react-firebase-auth/issues"
  },
  "homepage": "https://github.com/gurschitz/react-firebase-auth#readme",
  "dependencies": {
    "firebase": "^4.6.2",
    "whatwg-fetch": "^2.0.4"
  }
}
